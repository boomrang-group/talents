rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read their own profile
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow creation of a user profile during signup
      allow create: if request.auth != null;
    }

    // Public read for some collections might be needed, e.g. for competition details
    // match /competitions/{competitionId} {
    //   allow read: if true;
    // }

    // Allow authenticated users to create submissions
    match /submissions/{submissionId} {
      allow create: if request.auth != null;
      // Only the user who created the submission or an admin can read/update it
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.userId); // Add admin check later
    }

    // Allow public read on payments collection for status check, but restrict writes.
    match /payments/{paymentId} {
        allow read: if true;
        // The webhook should use an admin SDK or a secure key, so we can lock this down.
        // For now, allow any write for the webhook to function.
        // In production, you would secure this with a specific role or function.
        allow write: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
