
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read from the users collection.
    // This is for development purposes to get the admin panel working.
    // For production, you should restrict this to admin roles.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to payments collection for authenticated users
    match /payments/{paymentId} {
       allow read, write: if request.auth != null;
    }
  }
}
