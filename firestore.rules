rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to create submissions
    match /submissions/{submissionId} {
      allow create: if request.auth != null;
      // Allow anyone to read submissions (for voting pages)
      // and admins to update/delete (future proofing)
      allow read, update, delete: if true; 
    }

    // Allow anyone to read battles
    match /battles/{battleId} {
      allow read: if true;
      // Allow authenticated users to create/update/delete battles (admins)
      allow write: if request.auth != null;
    }

    // Allow anyone to create a vote (IP uniqueness is handled by API)
    match /battle_votes/{voteId} {
      allow create: if true;
      // Disallow reading/updating votes directly
      allow read, update, delete: if false;
    }
    
    // Allow anyone to create a vote for a challenge
    match /votes/{voteId} {
        allow create: if true;
        allow read, update, delete: if false;
    }
    
    // Admin-only access to all users data (for user management page)
    match /users/{userId} {
      allow list: if request.auth != null;
    }
  }
}
