rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload submissions into their own user-id folder.
    // Ensure the file size is reasonable (e.g., max 10MB).
    match /submissions/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
